@model Web.Models.AccountViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto mt-lg-5">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form" novalidate>
            <div class="card card-login">
                <div class="card-header card-header-rose text-center">
                    <h4 class="card-title"><i class="material-icons">fingerprint</i> Register</h4>
                </div>
                <div class="card-body">
                    <p class="card-description text-center">
                        Create an account. <br />
                        Works in latest Chrome, Safari, and Firefox
                    </p>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">face</i>
                                </span>
                            </div>
                            <input asp-for="Email" placeholder="Email" class="form-control" required autofocus />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">email</i>
                                </span>
                            </div>
                            <input asp-for="Password" placeholder="Password" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">email</i>
                                </span>
                            </div>
                            <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" required />
                        </div>
                    </div>
                </div>

                <div class="card-footer justify-content-center">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div asp-validation-summary="All" class="text-danger"></div>

                <p class="mt-5 mb-3 text-muted text-center">
                    By clicking Sign In with Email, you agree to our Terms and have read and acknowledge our US Privacy Statement. <br />
                    Already have an account? <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Login!</a>
                </p>
            </div>
        </form>

    </div>
</div>


