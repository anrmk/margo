@{
    ViewData["Title"] = "Companies";
    ViewData["Subtitle"] = "Organize and keep track of your companies by adding, deleting, merging, or restoring them in the system.";
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <div id="toolbar" role="toolbar">
                <a asp-controller="Company" asp-action="Create" class="btn btn-outline-success"><i class="fa fa-plus mr-1"></i> Create</a>
            </div>
            <table id="datatable" data-toggle="table" data-url="/api/company"
                   data-total-field="totalItems"
                   data-data-field="items">
                <thead>
                    <tr>
                        <th data-field="isStarred" data-formatter="isStarredFormatter"></th>
                        <th data-field="no" data-sortable="true">Company no</th>
                        <th data-field="name" data-sortable="true">Company</th>
                        <th data-field="phoneNumber" data-sortable="true">Phone</th>
                        <th data-field="address">Address</th>
                        <th data-field="updatedDate" data-sortable="true" data-formatter="$.fn.bootstrapTable.formatDate">Modified</th>
                        <th data-formatter="actionFormatter" class="text-right"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function isStarredFormatter(value, row) {
            return value == null || value == false ? `<i class='fa fa-star mr-1'></i>` : `<i class='fa fa-star text-warning mr-1'></i>`;
        }

        function actionFormatter(value, row) {
            return `<a href='/company/edit/${row.id}'><i class="fa fa-chevron-right"></i></a>`;
        }

        $(document).ready(function () {
            $('#datatable').on('dbl-click-row.bs.table', function (e, row, $element) {
                location.href = `/company/edit/${row.id}`;
            });
        });
    </script>
}