@{
    ViewData["Title"] = "Vendors";
    ViewData["Subtitle"] = "Organize and keep track of your vendor by adding, deleting, merging, or restoring them in the system.";
}

<div class="card">
    <div class="card-header card-header-primary card-header-icon">
        <div class="card-icon">
            <i class="material-icons">supervisor_account</i>
        </div>
        <h4 class="card-title">Vendor List</h4>
        <span class="text-muted">Before registering as a new vendor, you can search of vendors to see if they’re already registered</span>
    </div>

    <div class="card-body">
        <div id="tableToolbar">
            <a asp-controller="Vendor" asp-action="Create" class="btn btn-primary"><i class="fa fa-plus mr-1"></i> Create</a>
        </div>
        <div class="table-responsive">
            <table id="datatable" data-toggle="table" data-url="/api/vendor" >
                <thead>
                    <tr>
                        <th data-field="no" data-sortable="true">Vendor no</th>
                        <th data-field="name" data-sortable="true">Name</th>
                        <th data-field="phoneNumber" data-sortable="true">Phone</th>
                        <th data-field="address">Address</th>
                        <th data-field="updatedDate" data-sortable="true" data-formatter="$.fn.bootstrapTable.formatDate">Modified</th>
                        <th data-formatter="actionFormatter" class="text-right"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function actionFormatter(value, row) {
            return `<a href='/vendor/edit/${row.id}'><i class="material-icons">chevron_right</i></a>`;
        }

        $(document).ready(function () {
            $('#datatable').on('dbl-click-row.bs.table', function (e, row, $element) {
                location.href = `/vendor/edit/${row.id}`;
            });
        });
    </script>
}
