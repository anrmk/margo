@{
    ViewData["Title"] = "Vendors";
    ViewData["Subtitle"] = "Organize and keep track of your vendor by adding, deleting, merging, or restoring them in the system.";
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <div id="toolbar" role="toolbar">
                <a asp-controller="Vendor" asp-action="Create" class="btn btn-outline-success"><i class="fa fa-plus mr-1"></i> Create</a>
            </div>
            <table id="datatable" data-toggle="table" data-url="/api/vendor"
                   data-total-field="totalItems"
                   data-data-field="items">
                <thead>
                    <tr>
                        <th data-field="no" data-sortable="true">Vendor no</th>
                        <th data-field="name" data-sortable="true">Name</th>
                        <th data-field="phoneNumber" data-sortable="true">Phone</th>
                        <th data-field="address">Address</th>
                        <th data-field="updatedDate" data-sortable="true" data-formatter="$.fn.bootstrapTable.formatDate">Modified</th>
                        <th data-formatter="actionFormatter" class="text-nowrap text-right table-active">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function nameFormatter(value, row) {
            return `${value} <p class='text-muted'>${row.company}</p>`;
        }

        function activityFormatter(value, row) {
            return `<i class='mr-1 fa ${row.isActive ? 'fa-check-circle' : 'fa-times-circle'}'></i>`;
        }

        function actionFormatter(value, row) {
            return `<a href='/vendor/edit/${row.id}' class='btn btn-outline-secondary mr-1' >Edit</a>`;
        }
    </script>
}
