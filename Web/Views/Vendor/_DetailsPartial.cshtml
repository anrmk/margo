@model Web.ViewModels.VendorViewModel

<div class="ui attached orange segment">
    <h3 class="ui header">@Model.Name</h3>
    <p>@Model.Description</p>

    @if(Model.Fields.Count() > 0) {
        <a class="ui red ribbon label">Fields</a>
        <table class="ui single line very compact table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th class="collapsing"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var field in Model.Fields) {
                    <tr>
                        <td>@field.Name</td>
                        <td>@field.TypeName</td>
                        <td>
                            @if(field.IsRequired) {
                                <i class="icon checkmark"></i>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="ui bottom attached warning message">
    <div class="flex justify-content-between">
        <span>@Model.UpdatedBy</span>
        <span> @Model.UpdatedDate.ToString("MM/dd/yyyy")</span>
    </div>
</div>
