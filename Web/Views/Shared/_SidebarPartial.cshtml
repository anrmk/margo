@{
    var url = Context.Request.Path.ToString().ToLower();
}

<!-- Sidebar Menu -->
<div class="ui vertical sidebar menu left overlay visible">
    <div class="item">
        <a class="ui logo icon image" href="#"></a>
        <a href="/"><b>Margo Assistant</b></a>
    </div>

    <div class="item">
        <div class="header">Dashboard</div>
        <div class="menu">
            <a class="item @(url.Contains("/home") || url.Equals("/") ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </div>

    <div class="item">
        <div class="header">Company</div>
        <div class="menu">
            <a class="item @(url.Contains("/company") ? "active" : "")" asp-controller="Company" asp-action="Index">Database</a>
        </div>
    </div>

    <div class="item">
        <div class="header">Payment</div>
        <div class="menu">
            <a class="item @(url.Contains("/invoice") ? "active" : "")" asp-controller="Invoice" asp-action="Index">Invoices</a>
        </div>
    </div>

    <div class="item">
        <div class="header">Settings</div>
        <div class="menu">
            <a class="item @(url.Contains("/section") ? "active" : "")" asp-controller="Section" asp-action="Index">
                Section
            </a>
            <a class="item @(url.Contains("/vendor") ? "active" : "")" asp-controller="Vendor" asp-action="Index">
                Vendors
            </a>
            <a class="item @(url.Contains("/account") ? "active" : "") " asp-controller="Account" asp-action="Activity">
                Activity
            </a>
        </div>
    </div>
</div>
