@using Microsoft.AspNetCore.Identity
@using Core.Data.Entities

@inject SignInManager<ApplicationUserEntity> SignInManager
@inject UserManager<ApplicationUserEntity> UserManager

@{
    var url = Context.Request.Path.ToString().ToLower();
}

<div class="sidebar-sticky">
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link @(url.Contains("/home") ? "active" : "")" asp-controller="Home" asp-action="Index">
                <i class="fas fa-tachometer-alt mr-1"></i> Dashboard
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(url.Contains("/company") ? "active" : "")" asp-controller="Company" asp-action="Index">
                <i class="far fa-circle mr-1"></i> Companies
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(url.Contains("/vendor") ? "active" : "")" asp-controller="Vendor" asp-action="Index">
                <i class="far fa-user-circle mr-1"></i> Vendors
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(url.Contains("/account") ? "active" : "")" asp-controller="Vaccount" asp-action="Index">
                <i class="fas fa-user-friends mr-1"></i> Accounts
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(url.Contains("/payment") ? "active" : "")" asp-controller="Payment" asp-action="Index">
                Payments
            </a>
        </li>
    </ul>

    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
        <span><i class="fa fa-cogs mr-1"></i> Settings</span>
    </h6>
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link @(url.Contains("/exportSettings") ? "active" : "")" asp-controller="Settings" asp-action="ExportField">
                General
            </a>
        </li>
    </ul>
</div>
