@{
    var url = Context.Request.Path.ToString().ToLower();

    var userName = ViewData["UserName"];

    var isSignIn = false;
        bool.TryParse(ViewData["IsSignIn"].ToString(), out isSignIn);
}

<div class="ui menu">
    <div class="ui container">
        @if(isSignIn) {
        <a class="toc item">
            <i class="sidebar icon"></i>
        </a>
        }

        <a href="#" class="header item">
            @*<img class="logo" src="assets/images/logo.png">*@
            Margo Assistant
        </a>
        <a class="item @(url.Contains("/home") || url.Equals("/") ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
        <div class="right item">
            @if(isSignIn) {
                <div class="ui simple dropdown">
                    @userName <i class="dropdown icon"></i>
                    <div class="menu">
                        <a class="item" href="#">Link Item</a>
                        <a class="item" href="#">Link Item</a>
                        <div class="divider"></div>
                        <div class="header">Header Item</div>

                        <div class="item">
                            <form role="form" asp-controller="Account" asp-action="Logout">
                                <a class="ui button" href="javascript:void(0);" onclick="$(this).closest('form').submit();">Signout</a>
                            </form>
                        </div>

                    </div>

                </div>
            } else {
                <a class="ui button" asp-controller="Account" asp-action="Login">Login</a>
                <a class="ui button" asp-controller="Account" asp-action="Register">Sign Up</a>
            }
        </div>
    </div>
</div>





