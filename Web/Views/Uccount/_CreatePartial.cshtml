@model Web.ViewModels.UccountViewModel
@{
    var formId = Guid.NewGuid();

    var persons = (List<SelectListItem>)ViewData["Persons"];
    var companies = (List<SelectListItem>)ViewData["Companies"];
    var vendors = (List<SelectListItem>)ViewData["Vendors"];
    var categories = (List<SelectListItem>)ViewData["Categories"];
    var uccountKind = (Core.Data.Enums.UccountTypes)ViewData["Kind"];
}

<form id="@formId" class="ui form" asp-route="CreateUccount" method="post" data-request="ajax">
    <fieldset>
        <input type="hidden" name="Kind" value="@((int)uccountKind)" />

        <div class="field">
            <div class="two fields">
                @if(uccountKind == Core.Data.Enums.UccountTypes.BUSINESS) {
                    <div class="field required">
                        <label asp-for="CompanyId"></label>
                        <select id="companies-select" class="ui search dropdown" required asp-for="CompanyId" asp-items="@companies">
                            <option value="" selected>Select customers</option>
                        </select>
                    </div>
                } else {
                    <div class="field required">
                        <label asp-for="PersonId"></label>
                        <select id="persons-select" class="ui search dropdown" required asp-for="PersonId" asp-items="@persons">
                            <option value="" selected disabled hidden>Select vendor</option>
                        </select>
                    </div>
                }

                <div class="field required">
                    <label asp-for="VendorId"></label>
                    <select id="vendors-select" class="ui search dropdown" required asp-for="VendorId" asp-items="@vendors">
                        <option value="" selected disabled hidden></option>
                    </select>
                </div>
            </div>
        </div>

        <div id="vendor-fields" class="fields"></div>

        <div class="ui right floated dropdown mini icon button" tabindex="0" >
            <i class="plus icon"></i>
            <div class="menu">
                <div class="header">Services Types</div>
                @foreach(var category in categories) {
                    <a data-request="ajax" id="@category.Value" class="item" rel="serviceCreateOnClick" asp-route="GetCategory" asp-route-id="@category.Value">@category.Text</a>
                }
            </div>
        </div>

        <h4 class="ui dividing header">Services</h4>

        <div id="services-fields"></div>
    </fieldset>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        $("#vendors-select").on("change", function () {
            const vendorId = $(this).val();
            $.ajax({
                url: `/api/Vendor/GetVendor?id=${vendorId}`
            }).done((data, status, _) => {
                if (data && data.fields) {
                    const fields = $(generateFields(data.fields, VENDOR_FIELDS, true));
                    $(VENDOR_FIELDS_EL_NAME).html(fields);
                }
            });
        });
    })
</script>