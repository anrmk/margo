@model Web.ViewModels.PersonViewModel

<div class="ui attached orange segment">
    <h3 class="ui header">
        @(Model.SurName +" "+ Model.Name +" "+ Model.MiddleName)
    </h3>
    <p>@Model.Description</p>
</div>

<div class="ui bottom attached warning message">
    <div class="flex justify-content-between">
        <span>@Model.UpdatedBy</span>
        <span> @Model.UpdatedDate.Value.ToString("MM/dd/yyyy")</span>
    </div>
</div>
